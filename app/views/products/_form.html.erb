<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @product, html: { multipart: true } do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of product" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of product" %>
        </div>

        <div class="form-group">
          <%= f.number_field :price, required: true, class: "form-control", placeholder: "Price of product" %>
        </div>

        <div class="form-group">
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-custom" %>
        </div>
      <% end %>
      <p class="red-text"><%= link_to 'Back', products_path %></p>
    </div>
  </div>
</div>
